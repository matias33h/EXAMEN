1#inciar docker swarm

docker swarm init

2#listar nodes del cluste

docker node ls


3#crear un servicio y hacer deploy con un yml

docker stack deploy -c swarm.yml servicio-web



4#Para verificar el estado del servicio y asegurarte de que está funcionando

docker service ls

5#crear imagen 

docker build -t web1 .

6#

docker stack deploy -c swarm.yml mi_stack

7#

docker stack services mi_stack



8# Para envair el asunto y el correo debo mandar estos parametros se recomienda hacerlo en postman para realizar la peticion

{
  "remitente": "ejemplo@gmail.com",
  "destinatario": "ejemplo@gmail.com",
  "asunto": "Asunto del correo 4sss",
  "mensaje": "Contenido del mensaje 2s",
  "usuario": "programpruebas0@gmail.com",
  "contraseña": "vxivurzznjeuwzmj"
}

